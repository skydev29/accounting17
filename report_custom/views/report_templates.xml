<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="external_layout_striped_custom" inherit_id="web.external_layout_striped">

        <xpath expr="//div" position="replace">
            <div t-attf-class="o_company_#{company.id}_layout header" t-att-style="report_header_style"
                 t-att-dir="'rtl' if lang_is_rtl else 'ltr'">
                <div class="o_background_header" style="width: 100%; padding: 10px 0;">
                    <div class="row flex-row-reverse" t-attf-class="row #{'flex-row-reverse' if lang_is_rtl else ''}">
                        <div class="col-7">
                            <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" alt="Logo"
                                 style="height: 80px;"/>
                        </div>
                        <div class="col-5 text-start " style="padding-top:5px;">
                            <strong>
                                <t t-esc="company.name"/>
                            </strong>
                            <div style="padding-right:50px;">
                                <span t-field="company.partner_id"
                                      t-options='{"widget": "contact", "fields": ["address", "vat"], "no_marker": true}'/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
        <xpath expr="//t[@t-call='web.address_layout']" position="replace"/>
        <xpath expr="//div[3]" position="replace">
            <div t-attf-class="o_company_#{company.id}_layout footer o_background_footer">
                <div class="text-center" style="border-top:1px solid black;">

                    <div t-if="report_type == 'pdf'" class="text-muted">
                        Page:
                        <span class="page"/>
                        of
                        <span class="topage"/>
                    </div>
                    <div t-if="report_type == 'pdf' and display_name_in_footer" class="text-muted">
                        <span t-out="o.name">(document name)</span>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
  <!--   <xpath expr="//div[@name='comment']" position="replace">
      
    </xpath> -->

    <template id="address_layout_custom" inherit_id="web.address_layout">
        <xpath expr="//div[@t-if='address']/div[@name='address']" position="replace"/>


    </template>

</odoo>