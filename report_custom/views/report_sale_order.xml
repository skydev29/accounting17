<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="arabic_english_saleorder_custom" inherit_id="sale.report_saleorder_document">
        <xpath expr="//h2" position="replace">
            <t t-set="o_sec" t-value="doc.with_context(lang='ar_001')"/>
            <t t-set="o" t-value="doc.with_context(lang='en_US')"/>
            <h2 class="mt-4" style="width: 100%; text-align: center;">
                <h2 class="mt-4" style="width: 100%; text-align: center;">
                    <div class="row align-items-center arabic-din">
                        <div class="col-4 text-start">
                            <span t-if="env.context.get('proforma', False) or is_pro_forma">Pro-Forma Invoice #</span>
                            <span t-elif="doc.state in ['draft','sent']">Quotation #</span>
                            <span t-else="">Order #</span>
                        </div>
                        <div class="col-4 text-center">
                            <span t-field="doc.name" style="color:red; font-size: 1.3em; font-weight: bold;"/>
                        </div>
                        <div class="col-4 text-end" style="direction: rtl;">
                            <span t-if="env.context.get('proforma', False) or is_pro_forma">رقم الفاتورة الشكلية</span>
                            <span t-elif="doc.state in ['draft','sent']">رقم عرض السعر</span>
                            <span t-else="">رقم الأمر</span>
                        </div>
                    </div>
                </h2>
            </h2>
        </xpath>

