                            <div class="row" t-if="doc.validity_date" name="validity_date">
                                <div class="col-4">
                                    <strong style="white-space:nowrap;color:black;text-align:left;">Expiration Date:
                                    </strong>
                                </div>
                                <div class="col-4">
                                    <span t-field="doc.validity_date"/>
                                </div>
                                <div class="col-4" style="direction: rtl;">
                                    <strong style="white-space:nowrap;color:black;text-align:right;">
